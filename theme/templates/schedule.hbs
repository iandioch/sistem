<!DOCTYPE html>
<html lang="en">
  <head>
    <title>{{ site.title }} {{ year }} | {{ location }}</title>
    <link type="text/css" rel="stylesheet" href="/css/main.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon">
  </head>
  <body>
    <script>
    var countDownTo = new Date("March 24, 2018 09:00:00").getTime();
    var func = setInterval(function() {
    var currentTime = new Date().getTime();
    var span = countDownTo - currentTime;
    var days = Math.floor(span / (1000 * 60 * 60 * 24));
    var hrs = Math.floor((span % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    var mins = Math.floor((span % (1000 * 60 * 60)) / (1000 * 60));
    var secs = Math.floor((span % (1000 * 60)) / 1000);
    document.getElementById("countdowntimer").innerHTML = "Event begins in <p style='color:#6BA837; display:inline;'> " + days + "</p> days <p style='color:#6BA837; display:inline;'> " + hrs + "</p> hours <p style='color:#6BA837; display:inline;'> " + mins + "</p> minutes <p style='color:#6BA837; display:inline;'> " + secs + "</p> seconds ";
    if (span < 0) {
        clearInterval(func);
        document.getElementById("countdowntimer").innerHTML = "SISTEM HAS BEGUN";
    }
    }, 1000);
    </script>
    <div class="wrapper">
      <div class="sub-wrap">
        <header class="title">
            <h1 class="title__text"><a href="/"><span class="title__text__colour"><img src="https://fontmeme.com/permalink/171115/8b599403046ce0121496de57e1303b4f.png" border="0"><br><h5>{{{ site.title }}}</h5></h1>
          <p>{{ location }} {{ date }} {{ month }} {{ year }}</p>
          <ul class="menu">{{~#each site.menu~}}
            <li class="menu__item">
              <a href="/{{ url }}">{{ title }}</a>
            </li>
            {{/each}}</ul>
        </header>
        <p style="color:#6B6E70; padding-top: 100px; text-align:center; font-size: 24px; font-weight:100; font-family:Roboto:100,300,400" id="countdowntimer"></p>
        <main>
	   <div class="container livestream">
            <iframe id="live" src="{{ video }}" width="100%" height="400" marginwidth="0" marginheight="0" scrolling="no" frameborder="0" webkitallowfullscreen="" allowfullscreen=""></iframe>
          </div>
        </main>
      </div>
      <!-- All events are loaded into this element -->
      <div class="card-container">
        <ul class="collapsible popout" data-collapsible="accordion">{{~#each days~}}
          <div class="card-container">
            <ul class="collapsible popout card-container__events" data-collapsible="accordion">
              <li data-hash="#{{ day }}" class="active">
                <div id="#{{ day }}" class="collapsible-header container day">
                  <h5 class="day__title" data-position="right">
                    <span class="day__title__bold">{{ day }}</span> | {{ description }}
                  </h5>
                </div>
                <div class="collapsible-body" style="display: block;">
                  <ul id="{{ day }}-events" class="collapsible sub-collapsible" data-collepsible="accordion"> {{~#each events~}}
                    <li>
                      <div class="collapsible-header event-card">
                        <div class="event-card__time"> {{ time }} </div>
                        <div class="event-card__event"> {{ name }} </div>
                        <div class="event-card__place"> {{ place.id }} </div>
                      </div>
                      <div class="collapsible-body" style="display: block;">
                        <p> By: <i>{{ by }}</i> </p>
                        <p>{{ description }}</p>
                      </div>
                    </li>
                  {{/each}}</ul>
                </div>
              </li>
            </ul>
          </div>
        {{/each}}</ul>
      </div>
    </div>	  
    <!-- The script is loaded and ran -->
    <script> var start = (new Date('{{live}}'));</script>
    <script type="text/javascript" src="/js/main.min.js"></script>
  </body>
</html>
